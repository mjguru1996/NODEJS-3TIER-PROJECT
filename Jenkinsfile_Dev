pipeline {
    agent any
    
    tools {    
        nodejs 'nodejs'
    }
    stages{
        stage('GIT Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mjguru1996/Shack.git'
            }
        }
        stage('Frontend Scan') {
            steps {
                echo 'Scanning frontend...'
                dir('client') {
                sh 'find . -name "*.js" -exec node --check {} +'
                }
            }
        }
        stage('Backend Scan') {
            steps {
                echo 'Scanning backend...'
                dir('api') {
                sh 'find . -name "*.js" -exec node --check {} +'
                }
            }
        }
    }
    }
